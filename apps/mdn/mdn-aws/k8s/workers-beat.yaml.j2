kind: Deployment
apiVersion: extensions/v1beta1
metadata:
  name: {{ WORKER_BEAT_NAME }}
spec:
  replicas: 1
  template:
    metadata:
      labels:
        app: {{ WORKER_BEAT_NAME }}
    spec:
      volumes:
        - name: kuma-fs
          persistentVolumeClaim:
            claimName: {{ KUMA_PVC_NAME }}
      containers:
        - name: {{ WORKER_BEAT_NAME }}
          image: {{ KUMA_IMAGE }}:{{ KUMA_IMAGE_TAG }}
          imagePullPolicy: {{ KUMA_IMAGE_PULL_POLICY }}
          volumeMounts:
            - mountPath: {{ KUMA_MOUNT_PATH }}
              name: kuma-fs
          resources:
            requests:
              cpu: {{ WORKER_BEAT_CPU_REQUEST }}
              memory: {{ WORKER_BEAT_MEMORY_REQUEST }}
            limits:
              cpu: {{ WORKER_BEAT_CPU_LIMIT }}
              memory: {{ WORKER_BEAT_MEMORY_LIMIT }}
          command:
            - ./manage.py
          args:
            - celerybeat
            - "--loglevel=INFO"
          env:
            {% include 'kuma-env.yaml.j2' %}
